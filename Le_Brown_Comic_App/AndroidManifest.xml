    <application
        android:allowBackup="true"
        android:icon="@drawable/welcome_screen_image"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.brown_lee.MainActivity"
            android:label="@string/app_name" >
            </activity>
        <activity
            android:name="com.example.brown_lee.Welcome_Screen"
            android:label="@string/title_activity_welcome__screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.brown_lee.Life_of_brown_lee"
            android:label="@string/title_activity_life_of_brown_lee" >
        </activity>
        <activity
            android:name="com.example.brown_lee.Latest_Comic"
            android:label="@string/title_activity_latest__comic" >
        </activity>
    </application>

</manifest>
